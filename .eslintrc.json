{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "rules": {
    /* ===========================
       QUALITÉ GÉNÉRALE
    =========================== */
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-debugger": "warn",

    /* ===========================
       BONNES PRATIQUES
    =========================== */
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "no-eval": "error",
    "no-implied-eval": "error",

    /* ===========================
       STYLE (SIMPLE & LISIBLE)
    =========================== */
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "comma-dangle": ["error", "never"],
    "object-curly-spacing": ["error", "always"],

    /* ===========================
       DOM / UX
    =========================== */
    "no-alert": "off"
  }
}
